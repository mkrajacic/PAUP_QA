@using QA.Models
@model Korisnik
@{
    ViewBag.Title = "Novi korisnik";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li>@Html.ActionLink("Natrag na korisnike", "Index", "Korisnik")</li>
            </ul>
        </nav>
    </header>
    <section class="body">
        <section class="form-section">
            <h1>@ViewBag.Title</h1>
            @using (Html.BeginForm("DodajKorisnika", "Korisnik", FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.LabelFor(m => m.korisnicko_ime)
                @Html.EditorFor(m => m.korisnicko_ime, new { htmlAttributes = new { @placeholder = "Korisničko ime..." } })
                @Html.ValidationMessageFor(m => m.korisnicko_ime, "", new { @class = "validacija" })<br />
                @Html.LabelFor(m => m.LozinkaUnos)
                @Html.EditorFor(m => m.LozinkaUnos, new { htmlAttributes = new { @placeholder = "Lozinka..." } })
                @Html.ValidationMessageFor(m => m.LozinkaUnos, "", new { @class = "validacija" })<br />
                @Html.LabelFor(m => m.LozinkaUnos2)
                @Html.EditorFor(m => m.LozinkaUnos2, new { htmlAttributes = new { @placeholder = "Ponovite lozinku..." } })
                @Html.ValidationMessageFor(m => m.LozinkaUnos2, "", new { @class = "validacija" })<br />
                @Html.LabelFor(m => m.ovlast_sifra)<br />
                @Html.DropDownListFor(m => m.ovlast_sifra,
                                                    new SelectList(ViewBag.Ovlasti, "Sifra", "Naziv", ""), "Odaberite ovlast")
                @Html.ValidationMessageFor(m => m.ovlast_sifra, "", new { @class = "validacija" })
                <!---Html.LabelFor(m => m.image)
        <input type="file" name="image" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />-->
                <button name="dodajKor" type="submit">
                    Dodaj
                </button>
            }
        </section>
    </section>
</body>
</html>

@Styles.Render("/Content/style.css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")