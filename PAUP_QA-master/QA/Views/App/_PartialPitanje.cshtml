@using QA.Models
@model Pitanje


<title>@Model.pitanjeTekst</title>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <div class="bg show">
                <div class="question-block show">
                    <div class="header">
                        @Html.ActionLink(".","Index","App",new {@class = "close"})
                        <h1 class="modal-title">@Model.pitanjeTekst</h1>

                    </div>
                    <div class="modal-body">
                        <div class="answers-main-section">
                            <div class="answ-info">
                                @foreach (var kor in ViewBag.SviKorisnici)
                                {
                                    if (kor.id == Model.korisnicko_ime)
                                    {
                                <h2>@kor.korisnicko_ime</h2>
                                    }
                                }
                                <img src="~/img/user.png" class="user">
                            </div>
                            <div class="answ-container">
                                <p class="num-of-answ">Broj odgovora: 
                                @if (ViewBag.Broj > 0)
                                {
                                <span>@ViewBag.Broj</span>
                                }
                                else
                                {
                                    <span>0</span>
                                }
                                </p>
                                <div class="answers">
                                    @if (ViewBag.Broj == 0)
                                    {
                                        <p class="no-answers">Nema odgovora.</p>
                                    }
                                    else
                                    {
                                        foreach (var odg in ViewBag.SviOdgovori)
                                        {
                                            if (odg.pitanje_id == Model.id && odg.najdraze == true)
                                            {
                                                <div class="answer odabran">
                                                    <p>@odg.odgovor</p>
                                                </div>
                                            }
                                            else if (odg.pitanje_id == Model.id)
                                            {

                                                <div class="answer">
                                                    <p>@odg.odgovor</p>
                                                </div>
                                                }
                                            }
                                        }
                                        <div class="modal-footer">
                                            <form class="answer-form">
                                                <textarea placeholder="Upiši odgovor..."></textarea><br>
                                                <input type="submit" value="Odgovori">
                                            </form>
                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>
                @Styles.Render("/Content/style.css")

